# The P3 secondary configuration file defines the configuration for the
# secondary host and valid P3 primary hosts.

#
# Secondary local host definitions
#

# local/hostname = STRING
# local/subnet/#/ipver = NUMBER
# local/subnet/#/address = IP_ADDR

# Clustering definitions
# cluster_state = (0=disabled, 1=enabled)
# local/cluster_state = 0
# load_balance = (0=none, 1=round_robin, 2=byte_count)
# local/load_balance = 0
#
# Failover definitions
# local/failover = 0

#
# Secondary remote host definitions
# NOTE: If a remote primary is a gateway, the device itself must be
#   defined as a subnet.
#

# remote/hostname = STRING
# remote/ipver = NUMBER
# remote/port = NUMBER
# remote/address = IP_ADDR
# remote/subnet/#/ipver = NUMBER
# remote/subnet/#/address = IP_ADDR

